@model KickballManager.Models.Lineup

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Lineup</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<div id="Details">
    @Html.ActionLink("Add Player", "../LineupDetails/Create")
    <table class="table">
        <tr>
            <th>
             Player Name
            </th>
            <th>
             Has Kicked?
            </th>
            <th> Has Fielded?</th>
        </tr>

        @foreach (var item in Model.LineupDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hasKicked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hasFielded)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LineupDetailID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LineupDetailID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.LineupDetailID })
                </td>
            </tr>
        }
        </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.LineupID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
